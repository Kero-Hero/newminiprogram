<!--pages/login/login.wxml-->
<view class="page">
  <view class="login-container">
    <view class="logo-section">
      <view class="logo">🏠</view>
      <view class="app-name">智能设备管理</view>
      <view class="app-desc">安全便捷的设备管理解决方案</view>
    </view>

    <view class="login-form">
      <button class="login-btn" bindtap="handleWeChatLogin" loading="{{loginLoading}}">
        <view class="btn-content">
          <view class="wechat-icon">💬</view>
          <text>微信授权登录</text>
        </view>
      </button>
    </view>

    <view class="login-tips">
      <text class="tip-text">登录即表示您同意我们的</text>
      <text class="link-text" bindtap="showPrivacy">《隐私政策》</text>
      <text class="tip-text">和</text>
      <text class="link-text" bindtap="showTerms">《服务条款》</text>
    </view>
  </view>
</view> 